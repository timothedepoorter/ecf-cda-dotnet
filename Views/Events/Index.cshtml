@model IEnumerable<EcfCdaDotNet.Models.Event>

@{
    ViewData["Title"] = "Liste des événements";
}

<!-- Container pour le titre et le bouton -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    <a href="@Url.Action("Create", "Events")" class="btn btn-primary">Créer un nouvel événement</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Intitulé</th>
            <th>Lieu</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Date de création</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Title</td>
                <td>@ev.Location</td>
                <td>@ev.StartDate?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@ev.EndDate?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@ev.CreationDate?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a href="@Url.Action("Details", "Events", new { id = ev.Id })" class="btn" title="Voir">
                        <i class="fas fa-eye"></i>
                    </a>

                    <a href="@Url.Action("Edit", "Events", new { id = ev.Id })" class="btn" title="Modifier">
                        <i class="fas fa-edit"></i>
                    </a>

                    <a href="@Url.Action("Delete", "Events", new { id = ev.Id })" class="btn" title="Supprimer">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
